<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Platforms>x64</Platforms>
    <AssemblyName>SubC.AllegroDotNet</AssemblyName>
    <RootNamespace>SubC.AllegroDotNet</RootNamespace>
    <DebugType>portable</DebugType>
    <BaseOutputPath>..\..\Artifacts\</BaseOutputPath>
    <ProduceReferenceAssembly>False</ProduceReferenceAssembly>
    <ErrorReport>none</ErrorReport>
    <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
    <PackageId>SubC.AllegroDotNet</PackageId>
    <Authors>Sub-C</Authors>
    <Version>0.4.0</Version>
    <Company>Sub-C</Company>
    <Product>AllegroDotNet</Product>
    <Description>Interop framework to consume the Allegro 5 game programming library from C#.</Description>
    <PackageProjectUrl>https://github.com/sub-c/AllegroDotNet</PackageProjectUrl>
    <RepositoryUrl>https://github.com/sub-c/AllegroDotNet</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>game 2d allegro allegro5 interop directx opengl multimedia sound input graphics</PackageTags>
    <RepositoryType>git</RepositoryType>
    <PackageReleaseNotes>This release contains breaking changes; targets .NET6+ and many previously implemented functions are missing due to refactoring. Use v0.3.0 until refactoring is complete if required.</PackageReleaseNotes>
    <AllowUnsafeBlocks>False</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x64'">
    <WarningLevel>5</WarningLevel>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x64'">
    <WarningLevel>5</WarningLevel>
  </PropertyGroup>

</Project>
