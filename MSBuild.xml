    <MinorVersion>9</MinorVersion>
    <BuildVersion>0</BuildVersion>
    <Version>$(MajorVersion).$(MinorVersion).$(BuildVersion)</Version>
  </PropertyGroup>

  <ItemGroup>
    <CsProjects>$(MSBuildThisFileDirectory)Source\AllegroDotNet\AllegroDotNet.csproj</CsProjects>
